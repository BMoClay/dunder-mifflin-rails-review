
<% @employee.errors.full_messages.each do |error| %>
<h3><%= error %></h3>
<% end %>

<%= form_for @employee do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :alias %>
  <%= f.text_field :alias %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :office %>
  <%= f.text_field :office %>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <%= f.label :dog_id %>
  <%= f.integer :dog_id %>
  <%= f.submit %>
<% end %>